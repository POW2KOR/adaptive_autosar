# Use our custom-configured c++ toolchain.
build:aarch64_linux_ubuntu --crosstool_top=//bazel/toolchains/aarch64_linux_ubuntu_compiler:toolchain --experimental_scale_timeouts=100 --@starter_kit_adaptive_xavier//:build_target="minerva_target" --//:build_target="minerva_target"
build:aarch64_linux_linaro --crosstool_top=//bazel/toolchains/aarch64_linux_linaro_compiler:toolchain --experimental_scale_timeouts=100 --@starter_kit_adaptive_xavier//:build_target="minerva_target" --//:build_target="minerva_target"

# Use --cpu as a differentiator.
build:aarch64_linux_ubuntu  --cpu=aarch64
build:aarch64_linux_linaro  --cpu=aarch64

# Use the default Bazel C++ toolchain to build the tools used during the build.
build:aarch64_linux_ubuntu  --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:aarch64_linux_linaro  --host_crosstool_top=@bazel_tools//tools/cpp:toolchain

# We need to find a better approach for specifting pthread as a default, the same way we do with the aarch64 toolchain
build:x86_64_linux          --cpu=k8 --experimental_scale_timeouts=100

# this configuration option is used for remote caching on CI
# the path after keyword '--disk_cache="' is extracted in Jenkinsfile and used as efs cache mount volume inside docker container
# because of which it is not recommended to use '--disk_cache="' keyword for any other purpose
build:use_efs_build_cache   --disk_cache="/home/jenkins_agent/efs_cache/mpu"
